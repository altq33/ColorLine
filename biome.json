{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"formatWithErrors": false
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off",
				"noExplicitAny": "error",
				"noEmptyBlock": "error",
				"noConsole": "warn",
				"noUnassignedVariables": "error",
				"noDebugger": "error",
				"useAwait": "warn"
			},
			"correctness": {
				"noChildrenProp": "warn",
				"noUnusedVariables": "warn",
				"noConstantCondition": "warn",
				"noConstAssign": "error",
				"noEmptyPattern": "warn",
				"noInnerDeclarations": "error",
				"noInvalidBuiltinInstantiation": "error",
				"noInvalidUseBeforeDeclaration": "error",
				"noNestedComponentDefinitions": "error",
				"noReactPropAssignments": "error"
			},
			"style": {
				"noMagicNumbers": "warn",
				"noDefaultExport": "error",
				"noNestedTernary": "error"
			},
			"security": {
				"noBlankTarget": "warn",
				"noDangerouslySetInnerHtml": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noUselessCatch": "warn",
				"noUselessEmptyExport": "warn",
				"noUselessFragments": "warn"
			},
			"a11y": {
				"useAltText": "error"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedProperties": "on"
			}
		}
	}
}
